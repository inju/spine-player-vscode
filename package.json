{
  "name": "spine-player-vscode",
  "displayName": "Spine Player for VSCode",
  "description": "Play back Spine animations inside VSCode",
  "version": "1.0.0",
  "author": {
    "name": "Indrek Juhani"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inju.spine-player-vscode.playSpineAnimation",
        "title": "Play Spine Animation"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "inju.spine-player-vscode.playSpineAnimation",
          "when": "resourceExtname == .atlas",
          "group": "navigation@1"
        },
        {
          "command": "-",
          "when": "resourceExtname == .atlas",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
